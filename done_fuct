dirs = []
files = []

def get_files_and_dirs(path):
    """Recursively gets the names of files and folders."""
    ftp.cwd(path)
    items = ftp.nlst()

    for item in items:
        if "." not in item:  # if item is a folder (no extension)
            dirs.append(os.path.join(path, item))
            get_files_and_dirs(os.path.join(path, item))
        else:  # if item is a file
            files.append(os.path.join(path, item))

    ftp.cwd("..")  # go back up one level in the remote folder hierarchy

# Example usage:

get_files_and_dirs("/test")
